{
    "name": "inquest-backend",
    "version": "0.0.1",
    "description": "the inquest backend",
    "main": "index.js",
    "author": "The Inquest Authors",
    "license": "LGPL-3.0+",
    "private": true,
    "devDependencies": {
        "@types/jest": "^25.1.4",
        "@typescript-eslint/eslint-plugin": "^2.27.0",
        "@typescript-eslint/parser": "^2.27.0",
        "eslint": "^6.8.0",
        "jest": "^25.2.4",
        "madge": "^3.9.0",
        "prettier": "^2.0.2",
        "sqlite3": "^4.1.1",
        "ts-jest": "^25.3.0",
        "ts-node": "^8.8.1",
        "typescript": "^3.8.3"
    },
    "scripts": {
        "build": "tsc",
        "start": "yarn run build && yarn run start:js",
        "start:js": "node build/commands/serve.js",
        "test": "tsc && jest build",
        "lint": "eslint 'src/**/*ts' && prettier -c 'src/**/*ts'",
        "fix": "eslint --fix 'src/**/*ts'; prettier --write 'src/**/*ts'",
        "staged": "lint-staged",
        "schema": "ts-node src/commands/output_schema.ts",
        "schema:js": "node build/commands/output_schema.js",
        "codegen": "apollo codegen:generate --target=typescript  --localSchemaFile=schema.graphql --outputFlat src/generated --useReadOnlyTypes --globalTypesFile=src/generated/globalTypes.ts"
    },
    "dependencies": {
        "@types/bcrypt": "^3.0.0",
        "@types/body-parser": "^1.19.0",
        "@types/busboy": "^0.2.3",
        "@types/cookie-parser": "^1.4.2",
        "@types/cors": "^2.8.6",
        "@types/dotenv": "^8.2.0",
        "@types/express-session": "^1.17.0",
        "@types/graphql": "^14.5.0",
        "@types/graphql-upload": "^8.0.3",
        "@types/jsonwebtoken": "^8.3.9",
        "@types/minio": "^7.0.5",
        "@types/node": "^13.9.8",
        "@types/sinon": "^9.0.0",
        "@types/uuid": "^7.0.2",
        "apollo": "^2.28.0",
        "apollo-server": "^2.14.2",
        "apollo-server-express": "^2.12.0",
        "apollo-server-fastify": "^2.12.0",
        "apollo-server-testing": "^2.12.0",
        "bcrypt": "^4.0.1",
        "body-parser": "^1.19.0",
        "busboy": "^0.2.3",
        "class-transformer": "^0.2.3",
        "class-transformer-validator": "^0.8.0",
        "class-validator": "^0.11.1",
        "cookie-parser": "^1.4.5",
        "cors": "^2.8.5",
        "date-fns": "^2.11.1",
        "dotenv": "^8.2.0",
        "express-session": "^1.17.0",
        "graphql": "^14.6.0",
        "graphql-tag": "^2.10.3",
        "graphql-upload": "^10.0.0",
        "immutable": "^4.0.0-rc.12",
        "jsonwebtoken": "^8.5.1",
        "lint-staged": "^10.1.1",
        "lodash": "^4.17.15",
        "minio": "^7.0.15",
        "pg": "^8.2.1",
        "reflect-metadata": "^0.1.13",
        "sinon": "^9.0.2",
        "supertest": "^4.0.2",
        "ts-sinon": "^1.2.0",
        "type-graphql": "^0.17.6",
        "typedi": "^0.8.0",
        "typeorm": "^0.2.24",
        "typeorm-typedi-extensions": "^0.2.3",
        "uuid": "^7.0.3",
        "winston": "^3.2.1"
    },
    "lint-staged": {
        "*.{ts,tsx,js,jsx}": [
            "prettier --write",
            "eslint --fix",
            "jest --bail --findRelatedTests"
        ],
        "*.{json,md}": [
            "prettier --write"
        ]
    }
}
